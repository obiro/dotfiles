defutf8 on
defencoding utf8
encoding utf-8 utf-8

# キーバインド設定
escape ^z^z

# lockscreen無効化
bind x
bind ^x

# 
startup_message off
autodetach on
vbell off


defmousetrack on
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

caption always "%-w%10L>%{=b bw}%n %t%{-}%+w%-0="
hardstatus alwayslastline "%H%=%Y/%m/%d %02c"



